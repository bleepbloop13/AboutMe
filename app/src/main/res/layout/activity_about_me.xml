<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AboutMe">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/introPic"
        android:layout_below="@+id/introText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/me_in_new_york"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intro"
        android:id="@+id/introButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/choiralButton"
        android:layout_alignEnd="@+id/choiralButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Games"
        android:id="@+id/vgButton"
        android:layout_above="@+id/animButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Games"
        android:id="@+id/cgButton"
        android:layout_alignBottom="@+id/vgButton"
        android:layout_alignRight="@+id/introPic"
        android:layout_alignEnd="@+id/introPic"
        android:layout_toRightOf="@+id/vgButton"
        android:layout_toEndOf="@+id/vgButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choir"
        android:id="@+id/choiralButton"
        android:layout_below="@+id/introButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/vgButton"
        android:layout_toStartOf="@+id/vgButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anime"
        android:id="@+id/animButton"
        android:layout_below="@+id/introButton"
        android:layout_alignRight="@+id/vgButton"
        android:layout_alignEnd="@+id/vgButton"
        android:layout_alignLeft="@+id/vgButton"
        android:layout_alignStart="@+id/vgButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/eatButton"
        android:layout_alignBottom="@+id/animButton"
        android:layout_alignRight="@+id/cgButton"
        android:layout_alignEnd="@+id/cgButton"
        android:layout_alignLeft="@+id/cgButton"
        android:layout_alignStart="@+id/cgButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_text"
        android:id="@+id/introText"
        android:layout_below="@+id/choiralButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vgPic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cgPic"
        android:layout_marginBottom="143dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choirPic"
        android:layout_marginBottom="143dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/animButton"
        android:layout_alignStart="@+id/animButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animePic"
        android:layout_marginBottom="143dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/animButton"
        android:layout_alignStart="@+id/animButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodPic"
        android:layout_marginBottom="143dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/choiralButton"
        android:layout_toEndOf="@+id/choiralButton" />

</RelativeLayout>
